<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".com.zy.drawabletest.DrawableTestActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:background="@drawable/layer_test"></LinearLayout>

    <TextView
        android:id="@+id/transition_test_tv"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/transition_drawable"
        android:gravity="center"
        android:text="test transition drawable"
        android:textColor="#ffffff" />

    <TextView
        android:id="@+id/inset_transition_test_tv"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/insert_drawable"
        android:gravity="center"
        android:text="test inset drawable"
        android:textColor="#ffffff" />

    <ImageView
        android:id="@+id/transition_img"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:src="@drawable/transition_drawable" />
</LinearLayout>
